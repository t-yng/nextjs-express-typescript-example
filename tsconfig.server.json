{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "rootDir": ".",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/server/**/*.ts",
    "./server.ts"
  ]
}
